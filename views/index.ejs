<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles/style.css">
</head>

<body>
    <%- include('partials/header') %>
        <section class="post-creation">
            <h2>Create a New Post</h2>
            <form action="/create-post" method="POST">
                <div class="form-group">
                    <input type="text" name="postTitle" placeholder="Title" required>
                </div>
                <div class="form-group">
                    <textarea name="postContent" placeholder="What's on your mind?" rows="4" required></textarea>
                </div>
                <button type="submit">Publish Post</button>
            </form>
        </section>

        <hr>

        <section class="feed">
            <h3>Recent Posts</h3>
            <% posts.forEach((post, index)=> { %>
                <div class="post-card">
                    <h4>
                        <%= post.title %>
                    </h4>
                    <p>
                        <%= post.content %>
                    </p>

                    <div class="post-actions">
                        <a href="/edit/<%= index %>" class="btn-edit">Edit</a>

                        <form action="/delete" method="POST" style="display:inline;">
                            <input type="hidden" name="postIndex" value="<%= index %>">
                            <button type="submit" class="btn-delete"
                                onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </div>
                </div>
                <% }) %>
        </section>
        <%- include('partials/footer') %>
</body>

</html>